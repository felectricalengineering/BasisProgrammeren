/*

//opdracht 7
#include <stdio.h>
#include <stdlib.h>

float eerste_cijfer;
float tweede_cijfer;
float derde_cijfer;
float vierde_cijfer;
float vijfde_cijfer;
float zesde_cijfer;
float gemiddelde;

int main(){

printf("Geef het eerste cijfer: \n");
scanf_s("%f", &eerste_cijfer);

printf("\nGeef het tweede cijfer: \n");
scanf_s("%f", &tweede_cijfer);

printf("\nGeef het derde cijfer: \n");
scanf_s("%f", &derde_cijfer);

printf("\nGeef het vierde cijfer: \n");
scanf_s("%f", &vierde_cijfer);

printf("\nGeef het vijfde cijfer: \n");
scanf_s("%f", &vijfde_cijfer);

printf("\nGeef het zesde cijfer: \n");
scanf_s("%f", &zesde_cijfer);

gemiddelde = (eerste_cijfer + tweede_cijfer + derde_cijfer + vierde_cijfer + vijfde_cijfer + zesde_cijfer) / 6;

if(gemiddelde < 5.5){

    printf("\n%.1f dus een onvoldoende.", gemiddelde);
}

else{

    printf("\n%.1f dus een voldoende.", gemiddelde);
}
}

*/

