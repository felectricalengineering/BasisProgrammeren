/*

//opdracht 14
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

float a;
float b;
float c;
float x1;
float x2;
float discriminant;

int main(){

printf("Geef a: ");
scanf_s("%f", &a);

printf("Geef b: ");
scanf_s("%f", &b);

printf("Geef c: ");
scanf_s("%f", &c);

discriminant = b * b - 4 * a * c;

if(discriminant > 0){

x1 = (-b + sqrt(discriminant)) / (2 * a);
x2 = (-b - sqrt(discriminant)) / (2 * a);

printf("De oplossingen van de abc-formule zijn %f en %f.", x1, x2);
}

else if(discriminant == 0){

x1 = (-b + sqrt(b * b - 4 * a * c)) / (2 * a);

printf("De oplossing van de abc-formule zijn %f.", x1);
}

else {

printf("Uitkomst is imaginair.");
}
}

*/
