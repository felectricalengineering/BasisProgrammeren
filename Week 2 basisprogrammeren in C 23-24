/*

#include <stdio.h>
#include <stdlib.h>

int n;
int som;
int i;
int overflow;

int main(){

printf("Geef een getal n: ");
scanf_s("%d", &n);

while(i++ < n, som < overflow){
    som += i;
}

if(som > n){
    printf("Overflow.");
}
}

