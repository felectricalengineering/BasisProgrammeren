printf("Geef het aantal kWh van uw dalmoment in 1 jaar: ");
scanf_s("%f", &kWh_dal);

totaalprijs_kWh_dal = 0.40 * kWh_dal;

printf("Geef het aantal kWh van uw piekmoment in 1 jaar: ");
scanf_s("%f", &kWh_piek);

totaalprijs_kWh_piek = 0.46 * kWh_piek;

totaalprijs_elektriciteit = totaalprijs_kWh_dal + totaalprijs_kWh_piek + 80;

printf("Uw totale elektriciteitkosten voor 1 jaar is: %.2f", totaalprijs_elektriciteit);
}

